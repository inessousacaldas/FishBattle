	 * 获取当前屏幕亮度
	 */
	 public static int getScreenBrightness()
	 {
		 return BrightnessUtil.getScreenBrightness(getActivity());
	 }
	 
	/**
	 * 省电模式,设置亮度
	 */
	 public static void setEnergyConserving()
	 {
		 BrightnessUtil.setBrightness(getActivity(), curProgress); 
	 }
	 
	/**
	 * 恢复正常亮度
	 */
	
	
	public static Activity getActivity() {
		if (null == activity) {
			setActivity(UnityPlayer.currentActivity);
		}
		return activity;
	}

	public static void setActivity(Activity activity) {
		DeviceUtils.activity = activity;
	}
}