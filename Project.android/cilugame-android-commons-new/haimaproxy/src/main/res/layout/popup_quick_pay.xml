<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/popup_quick_pay_background"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <RelativeLayout
        android:id="@+id/quick_pay_haima_coin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="right"
        android:clickable="true"
        android:background="@drawable/border_transparent_bg_bottom_line"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/quick_pay_haima_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_pay_haima_coin"
            android:textColor="#FF000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/font_size_mini"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quick_pay_voucher_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="right"
        android:clickable="true"
        android:background="@drawable/border_transparent_bg_bottom_line"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/quick_pay_voucher_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_pay_voucher_amount"
            android:textColor="#FF000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/font_size_mini"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/quick_pay_alimm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="right"
        android:visibility="visible"
        android:background="@drawable/border_transparent_bg_bottom_line"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/quick_pay_alimm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝无密"
            android:textColor="#FF000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/font_size_mini"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quick_other_pay_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="right"
        android:background="@drawable/border_transparent_bg_bottom_line"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他支付方式"
            android:textColor="#FF000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/font_size_mini"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_arrow_right"
            />
    </RelativeLayout>

</LinearLayout>