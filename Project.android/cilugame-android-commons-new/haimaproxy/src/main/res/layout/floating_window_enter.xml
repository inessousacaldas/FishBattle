<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_window_enter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/floating_window_enter_iv"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/floating_window_enter" />

    <TextView
        android:id="@+id/floating_window_enter_red_dot_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_float_text"
        android:layout_margin="2dp"
        android:background="@drawable/floating_window_red_dot_shape" />
</FrameLayout>
