<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            style="@style/UserRegisterSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_security_title_head_text"/>

        <TextView
            android:id="@+id/dialog_security_level_tv"
            style="@style/UserRegisterSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_center_security_level_low"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        style="@style/MiddleSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/dialog_security_message_text"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/security_notify_negativeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/dialog_security_negative_button_text"
                android:singleLine="true"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:textColor="@color/user_register_button_disable_text_color"
                android:background="@drawable/common_dialog_negative_button_shape"/>

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/security_notify_positiveButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/dialog_security_positive_button_text"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/user_register_service_clause_color"
                android:singleLine="true"
                android:background="@drawable/common_dialog_positive_button_shape"/>
        </LinearLayout>


</LinearLayout>