<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/message_item_bg_bitmap">

        <TextView
            android:id="@+id/message_text_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/message_text_title"
            android:textSize="@dimen/font_size_middle"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/message_text_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_text_content"
            android:layout_below="@id/message_text_title_tv"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/font_size_small"/>

        <TextView
            android:id="@+id/message_text_switch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_text_show_switch"
            android:layout_below="@id/message_text_content_tv"
            android:textColor="@color/message_text_switch_color"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/message_text_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_time"
            android:layout_below="@id/message_text_switch_tv"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/font_size_small"/>

        <Button
            android:id="@+id/message_text_bt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@id/message_text_time_tv"
            android:layout_marginRight="10dp"
            android:background="@drawable/message_button_state_selector"
            android:layout_alignParentRight="true"
            android:textColor="@color/common_dialog_negative_button_bg"
            android:textSize="@dimen/font_size_middle"
            android:paddingBottom="5dp"
            android:text="@string/message_know"/>

    </RelativeLayout>


</LinearLayout>