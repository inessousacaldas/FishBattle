<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minWidth="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg_shape">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_test_title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_test_message"/>

    </LinearLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle"
        >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dialog_test_negative_button_text"
            android:singleLine="true"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:textColor="@color/user_register_button_disable_text_color"
            android:background="@drawable/common_dialog_negative_button_shape"/>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/dialog_test_positive_button_text"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/user_register_service_clause_color"
            android:singleLine="true"
            android:background="@drawable/common_dialog_positive_button_shape"/>

    </android.support.v7.widget.ButtonBarLayout>
</LinearLayout>